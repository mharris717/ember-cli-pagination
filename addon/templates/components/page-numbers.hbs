{{#if isStyleFoundation}}
  <ul class="pagination text-center" role="navigation" aria-label="Pagination">
    {{#if canStepBackward}}
      <li class="pagination-previous">
        <a href="#" {{action "incrementPage" -1}}>Previous <span class="show-for-sr">page</span></a>
      </li>
    {{else}}
      <li class="pagination-previous disabled">
        Previous <span class="show-for-sr">page</span>
      </li>
    {{/if}}
    {{#each pageItems as |item|}}
      {{#if item.dots}}
        <li class="ellipsis" aria-hidden="true"></li>
      {{/if}}
      {{#if item.current}}
        <li class="current">
          <a>{{item.page}}</a>
        </li>
      {{else}}
        <li><a href="#" {{action "pageClicked" item.page}}>{{item.page}}</a></li>
      {{/if}}
    {{/each}}
    {{#if canStepForward}}
      <li class="pagination-next">
        <a href="#" {{action "incrementPage" 1}}>Next <span class="show-for-sr">page</span></a>
      </li>
    {{else}}
      <li class="pagination-next disabled">
        Next
      </li>
    {{/if}}
  </ul>
{{else}}
  <div class="pagination-centered">
    <ul class="pagination">
      {{#if canStepBackward}}
        <li class="arrow prev enabled-arrow">
          <a href="#" {{action "incrementPage" -1}}>&laquo;</a>
        </li>
      {{else}}
        <li class="arrow prev disabled">
          <a href="#" {{action "incrementPage" -1}}>&laquo;</a>
        </li>
      {{/if}}

      {{#each pageItems as |item|}}
        {{#if item.dots}}
          <li class="dots disabled">
            <span>...</span>
          </li>
        {{/if}}
        {{#if item.current}}
          <li class="active page-number">
            <a>{{item.page}}</a>
          </li>
        {{else}}
          <li class="page-number">
            <a href="#" {{action "pageClicked" item.page}}>{{item.page}}</a>
          </li>
        {{/if}}
      {{/each}}

      {{#if canStepForward}}
        <li class="arrow next enabled-arrow">
          <a href="#" {{action "incrementPage" 1}}>&raquo;</a>
        </li>
      {{else}}
        <li class="arrow next disabled">
          <a href="#" {{action "incrementPage" 1}}>&raquo;</a>
        </li>
      {{/if}}
    </ul>
  </div>
{{/if}}

<div id="sortByField">
  <Input @type="text" @value={{sortByField}} />
</div>

<table class="table">
  <tr>
    <th>Name</th>
    <th>Completed</th>
  </tr>

  {{#each model as |content|}}
    <tr class="todo">
      <td class="name">{{content.name}}</td>
      <td>
        <Input @type="checkbox" @checked={{content.completed}} />
      </td>
    </tr>
  {{/each}}
</table>

<PageNumbers @content={{model}} />

<button {{action "save"}}>Save</button>

<div class="numRemoteCalls">
  {{model.numRemoteCalls}}
</div>

{{outlet}}
